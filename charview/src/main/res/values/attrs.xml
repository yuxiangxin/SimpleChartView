<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChartView">
        <attr name="axis_line_count" format="integer" />
        <attr name="axis_line_color" format="color" />
        <attr name="axis_line_height" format="dimension" />

        <attr name="axis_text_size" format="dimension" />
        <attr name="axis_text_color" format="color" />
        <attr name="axis_text_width" format="dimension" />

        <attr name="bottom_height" format="dimension" />

        <attr name="axis_texts_margin" format="dimension" />
        <attr name="item_margin" format="dimension" />
        <attr name="item_parent_margin" format="dimension" />

        <attr name="axis_align" format="enum">
            <enum name="SINGLE_LEFT" value="0" />
            <enum name="SINGLE_RIGHT" value="1" />
            <enum name="LEFT_RIGHT" value="2" />
        </attr>

    </declare-styleable>

</resources>